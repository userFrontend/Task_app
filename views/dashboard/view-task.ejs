<div class="container">
    <div class="row mb-4">
        <div class="col col-sm-2 col-md-3 col-lg-4 col-xl-5 col-xxl-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                  <li class="breadcrumb-item active" aria-current="page"><%= task.title  %></li>
                </ol>
              </nav>        
        </div>
        <div class="col col-sm-2 col-md-3 col-lg-4 col-xl-5 col-xxl-6">
            <h3 class="text-center text-success">View Task</h3>   
        </div>
    </div>

    <form action="/dashboard/update/<%= task._id %>" method="post">
        <div class="form-group mb-4">
            <input type="text" class="form-control fw-bold border-1" placeholder="Title" name="title" value="<%= task.title %>" required>
        </div>
        <div class="form-group mb-4">
            <textarea class="form-control fw-bold border-1" cols="20" rows="12" placeholder="Title" name="body" required>
                <%= task.body %>
            </textarea>
        </div>
        <div class="form-group mb-4" style="display: flex; align-items: center; justify-content: space-between;">
            <button class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-danger mb-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete a this task
            </button>
        </div>
    </form>
  
  <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
            <h1 class="modal-title fs-5 text-danger" id="exampleModalLabel">Delete Task</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3 class="text-center">
                    Are you confirm at delete this task
                </h3>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <a href="/dashboard/delete/<%= task._id %>" class="btn btn-danger">Delete</a>
            </div>
        </div>
        </div>
    </div>
</div>